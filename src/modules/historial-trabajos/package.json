{
  "name": "@historial-trabajos/tests",
  "version": "1.0.0",
  "description": "Test suite for Historial de Trabajos module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --spec 'cypress/e2e/historial-trabajos/**/*'",
    "test:all": "npm run test:ci && npm run test:e2e"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^modules/(.*)$": "<rootDir>/src/modules/$1",
      "^services/(.*)$": "<rootDir>/src/services/$1",
      "^core/(.*)$": "<rootDir>/src/core/$1"
    },
    "collectCoverageFrom": [
      "src/modules/historial-trabajos/**/*.{js,jsx}",
      "!src/modules/historial-trabajos/**/*.test.{js,jsx}",
      "!src/modules/historial-trabajos/**/*.spec.{js,jsx}",
      "!src/modules/historial-trabajos/**/index.js"
    ],
    "testMatch": [
      "<rootDir>/src/modules/historial-trabajos/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/modules/historial-trabajos/**/*.{test,spec}.{js,jsx}"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}

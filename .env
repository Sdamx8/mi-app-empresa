# Configuración del puerto del servidor de desarrollo
PORT=3001

# Configuración WebSocket para HMR (Hot Module Replacement)
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3001
WDS_SOCKET_PATH=/ws

# Configuración del cliente WebSocket
REACT_APP_WDS_SOCKET_HOST=localhost
REACT_APP_WDS_SOCKET_PORT=3001

# Desactivar ESLint plugin para evitar warnings en desarrollo
DISABLE_ESLINT_PLUGIN=true

# Desactivar Fast Refresh para mayor estabilidad
FAST_REFRESH=false

# Configuración para evitar errores de WebSocket
GENERATE_SOURCEMAP=false

# Configuración adicional para WebSocket
CHOKIDAR_USEPOLLING=false

# Configuración de logging
WDS_SOCKET_TIMEOUT=60000

# Desactivar overlay para warnings
REACT_APP_OVERLAY_WARNINGS=false
